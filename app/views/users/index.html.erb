<h2>Users</h2>
<p id="notice"><%= notice %></p>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>User Actions</th>
  </tr>

  <tr>
    <td><%= current_user.username %></td>
    <td><%= current_user.email %></td>
    <td id="actions">
        <div class="btn-group">
          <button class="btn dropdown-toggle" data-toggle="dropdown">
            Actions
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Show', current_user %></li>
            <li><%= link_to 'Edit', edit_user_path(current_user) %></li>
            <li><%= link_to 'Remove', current_user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>
    </td>
  </tr>
</table>

<br />

<%= link_to('Back to Homepage', traceroutes_path, :class=>'btn') %>
