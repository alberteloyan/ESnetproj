<%= form_for(@server) do |f| %>
  <% if @server.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@server.errors.count, "error") %> prohibited this server from being saved:</h2>

      <ul>
      <% @server.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :hostname %><br />
    <%= f.text_field :hostname %>
  </div>

  <div class="field">
    <%= f.label :ip %><br />
    <%= f.text_field :ip %>
  </div>

  <!-- ADD checkboxes for categories -->
  <div class="checkbox">
    <% @categories.each do |category| %>
      <%= check_box(category.name, category.id) %>
      <%= label(category.name, category.name) %><br/> 
    <% end %>
  </div>

  <button class="btn btn-primary" type="submit" id="create_server">Save Server</button>
<% end %>
