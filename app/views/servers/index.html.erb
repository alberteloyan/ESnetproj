<!--The server index-->
<h2>Servers List</h2>
<table class="table table-striped table-condensed table-bordered" id="server">
  <thead>
    <tr>
      <th>Ip</th>
      <th>Name</th>
      <th>Country</th>
      <th>Zip</th>
      <th>City</th>
      <th>State</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Server Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= server.ip %></td>
        <td><%= server.name %></td>      
        <td><%= server.country %></td>
        <td><%= server.zip %></td>
        <td><%= server.city %></td>
        <td><%= server.state %></td>
        <td><%= server.latitude %></td>
        <td><%= server.longitude %></td>
        <td id="actions">
          <div class="btn-group">
            <button class="btn dropdown-toggle" data-toggle="dropdown">
              Actions
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Show', server %></li>
              <li><%= link_to 'Edit', edit_server_path(server) %></li>
              <li><%= link_to 'Remove', server, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<div id="map_frame">
  <%= gmaps4rails(@json) %>
</div>



<form method="link" action="servers/new">
  <button class="btn btn-primary">New Server</button>
</form>






