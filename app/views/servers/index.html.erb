<h1>Listing servers</h1>

<table>
  <tr>
    <th>Ip</th>
    <th>Name</th>
    <th>Country</th>
    <th>Zip</th>
    <th>City</th>
    <th>State</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @servers.each do |server| %>
  <tr>
    <td><%= server.ip %></td>
    <td><%= server.name %></td>
    <td><%= server.country %></td>
    <td><%= server.zip %></td>
    <td><%= server.city %></td>
    <td><%= server.state %></td>
    <td><%= server.latitude %></td>
    <td><%= server.longitude %></td>
    <td><%= link_to 'Show', server %></td>
    <td><%= link_to 'Edit', edit_server_path(server) %></td>
    <td><%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

